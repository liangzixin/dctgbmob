<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:material="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context=".PlacardDetailActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <MaterialEditText
                android:id="@+id/Placard_Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="用户名:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="User_Name"
                material:floatingLabel="true"
                android:editable="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/normal_with_hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <MaterialEditText
                android:id="@+id/Placard_ddate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="发送日期:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="User_Birthday"
                material:floatingLabel="true"
                android:editable="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/normal_with_hint_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <MaterialEditText
                android:id="@+id/Placard_subject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="短信标题:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="标题"
                material:floatingLabel="true"
                android:editable="false"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp" />
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <MaterialEditText
        android:id="@+id/Placard_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="短信内容"
        android:gravity="left|top"
        android:inputType="textMultiLine"
        android:singleLine="true"
        android:text="短信内容"
        android:minLines="5"
        android:maxLines="7"
        android:scrollbars="vertical"
        material:floatingLabel="true"
        android:layout_weight="1.50"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp" />


</LinearLayout>

        <LinearLayout
            android:id="@+id/normal_with_hint_text_icon0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">

                <ImageView
                    android:id="@+id/img_1"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginRight="16dp"
                    android:layout_marginEnd="16dp"
                    android:src="@drawable/ic_communication_phone"
                    tools:ignore="ContentDescription"
                    android:layout_marginTop="10dp" />

                <MaterialEditText
                    android:id="@+id/Placard_lxdh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="电话号码:"
                    android:inputType="textNoSuggestions"
                    android:singleLine="true"
                    android:text="User_Tel"
                    material:floatingLabel="true"
                    android:editable="false"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="20dp" />
                   />
                <!--material:withIcon="@+id/img_1"-->
            </LinearLayout>
    </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
