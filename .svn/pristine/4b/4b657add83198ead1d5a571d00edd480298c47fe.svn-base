<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".TableDetailedActivity" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff33b5e5"
        android:textColor="#ffffff"
        android:text="餐桌详情：" />
    <TextView
        android:id="@+id/tvDetailedTablesName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff33b5e5"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="餐桌名称：" />
    <TextView
        android:id="@+id/tvDetailedTablesStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff33b5e5"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="餐桌状态：" />
    <TextView
        android:id="@+id/tvDetailedTablesPersonNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff33b5e5"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="餐桌人数：" />
    <TextView
        android:id="@+id/tvDetailedTablesDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ff33b5e5"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="10dp"
        android:textSize="15dp"
        android:text="餐桌备注：" />
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:background="#ff6666"
        android:textColor="#ffffff"
        android:text="消费详情：" />
    <ListView 
        android:layout_marginTop="168dp"
        android:id="@+id/lvDetailedTables"
        android:layout_width="fill_parent"
        android:layout_height="357dp">
    </ListView>
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#ff6666"
        android:layout_marginTop="527dp">
        <TextView
        android:id="@+id/tvTablesFoodsPriceNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:textColor="#ffffff"
        android:text="消费金额:0.0"
        android:textSize="15dp"/>
        <TextView
        android:id="@+id/tvTablesFoodsNums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="170dp"
        android:textColor="#ffffff"
        android:text="菜品数量：0"
        android:textSize="15dp"/>
    <Button 
        android:id="@+id/btnSettlConut"
        android:onClick="btn_settl_conut_Event"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_marginLeft="300dp"
        android:visibility="gone"
        android:textColor="#ffffff"
        android:text="结账"/>
        
    </RelativeLayout>
    
    

</RelativeLayout>
