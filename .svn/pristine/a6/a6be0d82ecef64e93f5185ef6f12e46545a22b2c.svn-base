<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:material="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
            tools:context=".QingjiaAddlActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <LinearLayout
        android:id="@+id/normal_with_input_text_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spin_province"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="16dp"
                app:ms_floatingLabelColor="#00FF00"
                app:ms_floatingLabelText="部门名称:"

                app:ms_multiline="true" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/normal_with_input_text_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spin_city"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="16dp"
                app:ms_floatingLabelColor="#00FF00"
                app:ms_floatingLabelText="姓      名:"

                app:ms_multiline="true" />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/normal_with_input_text_icon3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <MaterialEditText
                android:id="@+id/Qingjia_Time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="请假开始时间:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="请选择请假开始时间:"
                material:floatingLabel="true"
                android:editable="false"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/normal_with_input_text_icon5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <MaterialEditText
                android:id="@+id/Qingjia_Time2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="请假结束时间:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="请选择请假结束时间:"
                material:floatingLabel="true"
                android:editable="false"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/normal_with_input_text_icon7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spin_type1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="16dp"
                app:ms_floatingLabelColor="#00FF00"
                app:ms_floatingLabelText="请假类型:"

                material:floatingLabel="true"
                app:ms_multiline="true" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/error1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <MaterialEditText
                android:id="@+id/Qingjia_Content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="请假事由:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:minLines="5"
                android:maxLines="7"
                android:scrollbars="vertical"
                material:floatingLabel="true"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/normal_with_hint_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <MaterialEditText
                android:id="@+id/Qingjia_Longtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="请假天数:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="　　天"
                material:floatingLabel="true"
                android:enabled="false"

                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/normal_with_input_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <MaterialEditText
                android:id="@+id/qingjia_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="批复状态:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="未"
                material:floatingLabel="true"
                android:enabled="false"
                />
        </LinearLayout>




</LinearLayout>

</ScrollView>
