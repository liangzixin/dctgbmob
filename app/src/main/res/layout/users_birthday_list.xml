<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >


    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView2"
        android:layout_alignBottom="@+id/tvUsersBranchid"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/ivFoodsItem"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_marginLeft="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitXY"
        android:src="@drawable/foods_image_loding" />
    <TextView 
        android:id="@+id/tvUsersBranchid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="部门名称" />
    <TextView 
        android:id="@+id/tvUsersName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="200dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="职工姓名" />

    <TextView
        android:id="@+id/tvUsersTel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="260dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="手机号码" />
    <TextView
        android:id="@+id/tvWorkerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="260dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="职工号"
        android:visibility="invisible"
        />
    <TextView
        android:id="@+id/tvType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="260dp"
        android:textSize="15dp"
        android:textColor="#000000"
        android:text="党员号"
        android:visibility="invisible"
        />

</RelativeLayout>
