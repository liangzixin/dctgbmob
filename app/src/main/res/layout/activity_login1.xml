<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/logo"
    tools:context=".LoginActivity" >
    <!--android:paddingBottom="@dimen/activity_vertical_margin"-->
    <!--android:paddingLeft="@dimen/activity_horizontal_margin"-->
    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->
    <!--android:paddingTop="@dimen/activity_vertical_margin"-->
    <TextView
        android:id="@+id/tvMainUserName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff6666"
        android:textColor="#ffffff"
        android:text="昆明市东川区企业退休人员管理办公室移动OA"
        android:layout_marginTop="0dp"

        />

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="120dp"
            android:id="@+id/tvUserName"
            android:textSize="30dp"
            android:textColor="#ff00ddff"
            android:text="用户登陆"

        android:layout_marginTop="50dp"

        />
    <!--android:src="@drawable/apptheme_edit_text_holo_light"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="horizontal"


        >
        <!--android:paddingTop="@dimen/activity_vertical_margin"-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:textColor="#ff00ddff"
            android:id="@+id/tvUserName1"
            android:textSize="20dp"
            android:text="职工编号："
            android:layout_marginTop="100dp" />
       <EditText
            android:id="@+id/etUserName"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/tvUserName"
           android:layout_marginTop="100dp"
            android:background="#ffffff"

           />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"

        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvPwd"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="60dp"
            android:textSize="20dp"

            android:textColor="#ff00ddff"
            android:text="密    码：" />
       <EditText 
           android:id="@+id/etPwd"
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginTop="120dp"
           android:layout_marginLeft="0dp"
            android:layout_toRightOf="@id/tvPwd"
           android:textColor="#000000"
            android:textSize="20dp"
            android:password="true"
           android:background="#ffffff"
           />
    </LinearLayout>
    <!--android:src="@drawable/apptheme_edit_text_holo_light"-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
       <CheckBox 
           android:id="@+id/cbSaveUser"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="200dp"
           android:layout_marginLeft="30dp"
           android:textColor="#ff00ddff"
           android:text="记住密码"/>
       <CheckBox 
           android:id="@+id/cbAutoLogin"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="200dp"
           android:layout_marginLeft="100dp"
           android:textColor="#ff00ddff"
           android:text="自动登录"/>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" 
        android:layout_marginTop="20dp"
        android:orientation="horizontal">
        <Button 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="70dp"
            android:textColor="#ff00ddff"
            android:id="@+id/btnLogin"
            android:text="登陆" />
       <Button
            android:id="@+id/btnExit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="270dp"
            android:layout_marginLeft="90dp"
            android:textColor="#ff00ddff"
            android:text="退出"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvMainUserName1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#ff6666"
        android:textColor="#ffffff"
        android:text="CopyRight © 2016 昆明英信科技有限公司 All Rights Reserved"
        android:layout_marginTop="569dp"
        android:gravity="center"
        />
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/eat_bottom"
        android:layout_marginTop="588dp"
        >
    </RelativeLayout>
    

</RelativeLayout>