<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:material="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    tools:context=".YsryAddActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

                 <LinearLayout
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content">

                                 <fr.ganfra.materialspinner.MaterialSpinner
                                     android:id="@+id/ysry_a2"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     app:ms_arrowColor="#0000FF"
                                     app:ms_arrowSize="16dp"
                                     app:ms_floatingLabelColor="#00FF00"
                                     app:ms_floatingLabelText="请选择部门名称"
                                     app:ms_multiline="true" />
                             </LinearLayout>

                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content">



                                 <MaterialEditText
                                     android:id="@+id/ysry_a3"
                                     android:layout_width="0dp"
                                     android:layout_height="wrap_content"
                                     android:layout_weight="5.05"
                                     android:hint="个人编号"
                                     android:enabled="true"
                                     android:inputType="textNoSuggestions"
                                     android:singleLine="true"

                                     material:floatingLabel="true"
                                     />
                             </LinearLayout>

                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content">









                                 <MaterialEditText
                                     android:id="@+id/ysry_a4"
                                     android:layout_width="0dp"
                                     android:layout_height="wrap_content"
                                     android:layout_weight="5.05"
                                     android:hint="死亡职工姓名"
                                     android:inputType="textNoSuggestions"
                                     android:singleLine="true"
                                   material:floatingLabel="true"
                                     />
                             </LinearLayout>
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content">

                                 <MaterialEditText
                                     android:id="@+id/ysry_a5"
                                     android:layout_width="0dp"
                                     android:layout_height="wrap_content"
                                     android:layout_weight="3.75"
                                     android:hint="遗属姓名"
                                     android:inputType="textNoSuggestions"
                                     android:singleLine="true"
                                         material:floatingLabel="true"
                                     />
                             </LinearLayout>
                         <LinearLayout
                             android:layout_width="fill_parent"
                             android:layout_height="wrap_content"
                             android:orientation="horizontal"
                             android:padding="16dp">
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:weightSum="1"

                                 >
                                 <fr.ganfra.materialspinner.MaterialSpinner
                                     android:id="@+id/ysry_a6"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     app:ms_arrowColor="#0000FF"
                                     app:ms_arrowSize="16dp"
                                     app:ms_floatingLabelColor="#00FF00"
                                     app:ms_floatingLabelText="性别:"
                                     app:ms_multiline="true" />

                             <LinearLayout
                                 android:layout_width="wrap_content"
                                 android:layout_height="wrap_content"
                                 android:weightSum="1"
                                 android:layout_marginLeft="25dp"

                                 >
                                 <fr.ganfra.materialspinner.MaterialSpinner
                                     android:id="@+id/ysry_a7"
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     app:ms_arrowColor="#0000FF"
                                     app:ms_arrowSize="16dp"
                                     app:ms_floatingLabelColor="#00FF00"
                                     app:ms_floatingLabelText="供养关系:"
                                     app:ms_multiline="true" />
                             </LinearLayout>
                                </LinearLayout>
                             </LinearLayout>
                             <LinearLayout
                                 android:layout_width="match_parent"
                                 android:layout_height="wrap_content"
                                 android:orientation="horizontal"
                                 android:padding="16dp">
                                 <LinearLayout
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:weightSum="1"

                                     >
                                     <fr.ganfra.materialspinner.MaterialSpinner
                                         android:id="@+id/ysry_a8"
                                         android:layout_width="fill_parent"
                                         android:layout_height="wrap_content"
                                         app:ms_arrowColor="#0000FF"
                                         app:ms_arrowSize="16dp"
                                         app:ms_floatingLabelColor="#00FF00"
                                         app:ms_floatingLabelText="请选择类别:"
                                         app:ms_multiline="true" />

                                 <LinearLayout
                                     android:layout_width="wrap_content"
                                     android:layout_height="wrap_content"
                                     android:weightSum="1"
                                      android:layout_marginLeft="25dp"
                                     >
                                     <fr.ganfra.materialspinner.MaterialSpinner
                                         android:id="@+id/ysry_a9"
                                         android:layout_width="wrap_content"
                                         android:layout_height="wrap_content"
                                         app:ms_arrowColor="#0000FF"
                                         app:ms_arrowSize="16dp"
                                         app:ms_floatingLabelColor="#00FF00"
                                         app:ms_floatingLabelText="户口性质:"
                                         app:ms_multiline="true" />
                                 </LinearLayout>
                             </LinearLayout>
                             </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                                                                                                                                                                                                                                                                <MaterialEditText
                              android:id="@+id/ysry_a10"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="3"
                              android:hint="享受遗属生活时间"
                              android:inputType="textNoSuggestions"
                              android:singleLine="true"

                                  material:floatingLabel="true"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                                               <MaterialEditText
                              android:id="@+id/ysry_a11"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="3"
                              android:hint="增加遗属生活时间"
                              android:inputType="textNoSuggestions"
                              android:singleLine="true"
                              material:floatingLabel="true"

                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">
                                                    <MaterialEditText
                              android:id="@+id/ysry_a12"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="3"
                              android:hint="身份证号"
                              android:inputType="textNoSuggestions"
                              android:singleLine="true"
                            material:floatingLabel="true"
                              />
                      </LinearLayout>

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">


                          <MaterialEditText
                              android:id="@+id/ysry_a13"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="3"
                              android:hint="户口地址"
                              android:inputType="textNoSuggestions|textMultiLine"
                              android:singleLine="true"

                                    material:floatingLabel="true"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                          <MaterialEditText
                              android:id="@+id/ysry_a14"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_weight="3"

                              android:hint="居住地址"
                              android:inputType="textNoSuggestions|textMultiLine"
                              android:singleLine="true"

                                   material:floatingLabel="true"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical">
                                                                                                                                                                                                                                                                                            <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="3"
                              android:gravity="center_vertical">

                              <ImageView
                                  android:id="@+id/img_1"
                                  android:layout_width="24dp"
                                  android:layout_height="24dp"
                                  android:layout_marginRight="16dp"
                                  android:layout_marginEnd="16dp"
                                  android:src="@drawable/ic_communication_phone"
                                  tools:ignore="ContentDescription"/>

                              <MaterialEditText
                                  android:id="@+id/ysry_a160"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:hint="手机号1"
                                  android:inputType="textNoSuggestions"
                                  android:singleLine="true"
                                  material:withIcon="@+id/img_1"
                                     material:floatingLabel="true"
                                  />
                          </LinearLayout>
                      </LinearLayout>

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical">
                                <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="3"
                              android:gravity="center_vertical">

                              <ImageView
                                  android:id="@+id/img_2"
                                  android:layout_width="24dp"
                                  android:layout_height="24dp"
                                  android:layout_marginRight="16dp"
                                  android:layout_marginEnd="16dp"
                                  android:src="@drawable/ic_communication_phone"
                                  tools:ignore="ContentDescription"/>

                              <MaterialEditText
                                  android:id="@+id/ysry_a161"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:hint="手机号码2"
                                  android:inputType="textNoSuggestions"
                                  android:singleLine="true"

                                  material:withIcon="@+id/img_2"
                                  material:maxCharacters="11"
                                    material:floatingLabel="true"

                                  />
                          </LinearLayout>

                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:gravity="center_vertical">
                           <LinearLayout
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="3"
                              android:gravity="center_vertical">

                              <ImageView
                                  android:id="@+id/img_3"
                                  android:layout_width="24dp"
                                  android:layout_height="24dp"
                                  android:layout_marginRight="16dp"
                                  android:layout_marginEnd="16dp"
                                  android:src="@drawable/ic_communication_phone"
                                  tools:ignore="ContentDescription"/>

                              <MaterialEditText
                                  android:id="@+id/ysry_a162"
                                  android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:hint="固定电话"
                                  android:inputType="textNoSuggestions"
                                  android:singleLine="true"

                                  material:withIcon="@+id/img_3"
                                    material:floatingLabel="true"
                                  />
                          </LinearLayout>
                      </LinearLayout>

                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="1">

                        <MaterialEditText
                              android:id="@+id/ysry_a18"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="暂时时间"
                              android:inputType="textNoSuggestions"
                              android:singleLine="true"
                               material:floatingLabel="true"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="1">
                                             <MaterialEditText
                              android:id="@+id/ysry_a19"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="减少时间"
                              android:inputType="textNoSuggestions"
                              android:singleLine="true"
                               material:floatingLabel="true"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="1">


                          <MaterialEditText
                              android:id="@+id/ysry_a15"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="邮政编码"
                              android:inputType="textNoSuggestions"
                              android:singleLine="true"
                                material:floatingLabel="true"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="1">
                                     <MaterialEditText
                              android:id="@+id/ysry_a20"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="子女入学时间"
                              android:inputType="textNoSuggestions"
                              android:singleLine="true"
                              material:floatingLabel="true"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="1">
                           <MaterialEditText
                              android:id="@+id/ysry_a21"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="学校名称"
                              android:inputType="textNoSuggestions"
                              android:singleLine="true"
                              material:floatingLabel="true"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="1">


                          <MaterialEditText
                              android:id="@+id/ysry_a22"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="毕业时间"
                              android:inputType="textNoSuggestions"
                              android:singleLine="true"
                               material:floatingLabel="true"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="1">
                           <MaterialEditText
                              android:id="@+id/ysry_a23"
                              android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:hint="毕业时间"
                              android:inputType="textNoSuggestions"
                              android:singleLine="true"
                               material:floatingLabel="true"
                              />
                      </LinearLayout>
                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:weightSum="1">

                                <fr.ganfra.materialspinner.MaterialSpinner

                              android:id="@+id/ysry_a24"
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              app:ms_arrowColor="#0000FF"
                              app:ms_arrowSize="16dp"
                              app:ms_floatingLabelColor="#00FF00"
                              app:ms_floatingLabelText="伤残等级"
                              app:ms_multiline="true"
                                    material:floatingLabel="true"
                              />
                      </LinearLayout>


                      <LinearLayout
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content">

                          <TextView
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:layout_marginRight="16dp"
                              android:layout_marginEnd="16dp"
                              android:text="操作员"/>

                          <MaterialEditText
                              android:id="@+id/ysry_a30"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="3"
                                android:hint="操作员"
                              android:inputType="textNoSuggestions"
                              android:enabled="false"
                              material:maxCharacters="50"

                              />
                      </LinearLayout>



      </LinearLayout>

</ScrollView>
