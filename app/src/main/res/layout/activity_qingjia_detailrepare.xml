<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:material="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
            tools:context=".QingjiaDetailActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <MaterialEditText
                android:id="@+id/Qingjia_Branch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="部门名称:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                material:floatingLabel="true"
                android:editable="false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <MaterialEditText
                android:id="@+id/Qingjia_Name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="姓名:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                material:floatingLabel="true"
                android:editable="false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <MaterialEditText
                android:id="@+id/Qingjia_Time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="请假开始时间:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="请假选择开始时间:"
                material:floatingLabel="true"
                android:editable="false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <MaterialEditText
                android:id="@+id/Qingjia_Time2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="请假结束时间:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="请选择假结束时间"
                material:floatingLabel="true"
                android:editable="false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <MaterialEditText
                android:id="@+id/Qingjia_Longtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="请假天数:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="　　天"
                material:floatingLabel="true"
                android:enabled="false"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/Qingjia_leixing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="16dp"
                app:ms_floatingLabelColor="#00FF00"
                app:ms_floatingLabelText="请假类型:"

                app:ms_multiline="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <MaterialEditText
                android:id="@+id/Qingjia_Content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="请假事由:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"

                material:floatingLabel="true"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <MaterialEditText
                android:id="@+id/qingjia_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="批复状态:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="未"
                material:floatingLabel="true"
                android:enabled="false"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <MaterialEditText
                android:id="@+id/qingjia_leader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="部门领导签字:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="Qingjia_Address"
                material:floatingLabel="true"
                android:enabled="false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <MaterialEditText
                android:id="@+id/qingjia_leader1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="分管领导签字:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="Qingjia_Address"
                material:floatingLabel="true"
                android:enabled="false"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">



            <MaterialEditText
                android:id="@+id/qingjia_leader2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="主任签字:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="Qingjia_Address"
                material:floatingLabel="true"
                android:enabled="false"
                />
        </LinearLayout>


</LinearLayout>

</ScrollView>
