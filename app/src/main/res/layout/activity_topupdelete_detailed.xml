<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFCECE"
    tools:context=".EatTotalDetailActivity"
    android:clickable="true">

    <TextView 
        android:id="@+id/tvEatTotalName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="42dp"
        android:textSize="18dp"
        android:textColor="#ff6666"
        android:text="姓名"
        android:layout_centerHorizontal="true"

        android:layout_marginLeft="180dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="47dp"
        android:textSize="18dp"
        android:textColor="#ff6666"
        android:text="年月"
        android:id="@+id/tvEatTotalYmonth"
        android:maxWidth="150dp"
        android:layout_below="@+id/tvEatTotalName"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/tvEatTotalPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#ff6666"
        android:text="金额(元):"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/tvEatTotalYmonth"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvDjr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textColor="#ff6666"
        android:text="登记人"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/tvEatTotalPrice"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:id="@+id/ivUserPic"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/button"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/tvEatTotalYmonth" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:background="@drawable/eat_bottom"
        android:layout_marginTop="588dp"
        >
    </RelativeLayout>

</RelativeLayout>
