<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EatTopupActivity" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:background="#ff33b5e5"
        android:layout_marginTop="0dp"
        android:textSize="17dp"
        android:text="  序号     充值时间        姓  名     金额(元)    操作员 " />
    <com.scme.order.view.XListView
        android:id="@+id/lvEats"
        android:layout_width="fill_parent"
        android:layout_height="510dp"
        android:layout_marginTop="22dp"
        android:dividerHeight="1px"
        android:divider="#FF909090"
        />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="540dp"
        android:background="#ff33b5e5">


        <TextView
            android:id="@+id/tvEatTolNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="1dp"
            android:background="#ff33b5e5"
            android:text="总次数：0     "
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvEatToltalprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/tvEatTolNum"
            android:background="#ff33b5e5"
            android:text="总金额：   "
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/tvEattopuptotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentRight="true"
            android:layout_marginRight="4dp"
            android:layout_marginTop="1dp"
            android:background="#ff33b5e5"
            android:text="余额：   "
            android:textColor="#000000"
            android:textSize="18dp" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="@drawable/eat_bottom"
        android:layout_marginTop="588dp"
        >
    </RelativeLayout>
</RelativeLayout>
