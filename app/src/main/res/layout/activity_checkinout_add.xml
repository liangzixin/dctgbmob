<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:material="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
            tools:context=".CheckinoutAddActivity"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

    <LinearLayout
        android:id="@+id/normal_with_input_text_icon1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"

        >

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spin_bmmz"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="16dp"
                app:ms_floatingLabelColor="#00FF00"
                app:ms_floatingLabelText="部门名称:"

                app:ms_multiline="true" />
            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="整个部门"
                android:id="@+id/checkBox"
                android:layout_marginLeft="20dp"
                android:textSize="16dp"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/normal_with_input_text_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">


            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spin_xm"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="16dp"
                app:ms_floatingLabelColor="#00FF00"
                app:ms_floatingLabelText="姓      名:"

                app:ms_multiline="true" />



        </LinearLayout>
        <LinearLayout
            android:id="@+id/normal_with_input_text_icon3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">
            <MaterialEditText
                android:id="@+id/Checkinout_Time1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="5"
                android:hint="打卡日期:"
                android:inputType="textNoSuggestions"
                android:singleLine="true"
                android:text="请选择打卡日期:"
                material:floatingLabel="true"
                android:editable="false"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/normal_with_input_text_icon7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <fr.ganfra.materialspinner.MaterialSpinner
                android:id="@+id/spin_type1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                app:ms_arrowColor="#0000FF"
                app:ms_arrowSize="16dp"
                app:ms_floatingLabelColor="#00FF00"
                app:ms_floatingLabelText="打卡类型:"

                material:floatingLabel="true"
                app:ms_multiline="true" />
        </LinearLayout>






</LinearLayout>

</ScrollView>
